<div class="container px-5 px-sm-0">
  <div class="row">

  <%= render "users/info", book: @book_new, user: @user, follower_users: @follower_users, following_users: @following_users %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
      	  <tbody>
      		  <tr>
              <td>
                <%= image_tag @book.user.get_profile_image, size: "50x50" %>
                <p><%= link_to user_path(@user), class: "mt-1" do %>
                <%= @user.name %>
                <% end %>
                </p>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path, class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                <% end %>
              </td>
              <td id="favorite_buttons_<%= @book.id %>">
                <%= render "favorites/favorite", book: @book %>
              </td>
              <td id="book_comment_count">
                <%= render "book_comments/count", book: @book %>
              </td>
            </tr>
          </tbody>
        </table>

          <div id="book_comment_table">
            <%= render "book_comments/table", book: @book %>
            </div>
          <%= form_with model: [@book, @book_comment], local:false do |f| %>
          <%= f.text_area :comment, size: "100", placeholder: "コメントをここに" %>
          <%= f.submit "送信", id: "comment_form" %>
          <% end %>
    </div>
  </div>
</div>
