
<h2>Books search for</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= link_to(user) do %>
            <%= image_tag user.get_profile_image, size:'100x100' %>
            <% end %>
            <%= user.name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image, size:'100x100' %>
            <% end %>
          </td>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>