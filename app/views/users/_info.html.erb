<div class="col-md-3">
  <% if book.errors.any? %>
  <%= book.errors.count %>errors prohibited this obj from being saved:
    <ul>
      <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
    <% end %>
  <h2>User info</h2>
    <%= image_tag user.get_profile_image, size: "150x150" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
      <tr>
       <th>follows</th>
       <th>
         <%= link_to follows_user_path(user) do %>
         <%= following_users.count %>
         <% end %>
       </th>
      </tr>
      <tr>
        <th>followers</th>
        <th>
         <%= link_to followers_user_path(user) do %>
         <%= follower_users.count %>
         <% end %>
        </th>
      </tr>
      <tr>
        <th>
        <% if current_user != user %>
        <% if current_user.following?(user) %>
        <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
        <% else %>
        <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class:"btn-sm btn-success" %>
        <% end %>
        <% end %>
        </th>
        <th></th>
      </tr>
    </tbody>
  </table>
  <div>
    <% if current_user == user %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-success btn-block", method: :get do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
    <% end %>
  </div>

  <h2 class="mt-4 mb-2">New book</h2>
    <%= form_with model: book, local:true do |f| %>
      <h4>Title</h4>
    <%= f.text_field :title %>
      <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book', class: "btn btn-success mt-2" %>
    <% end %>
</div>