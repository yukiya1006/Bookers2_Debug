<div class="container px-5 px-sm-0">
  <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
              <th colspan="4"></th>
              <th colspan="5"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
              <td><%= user.name %></td>
              <td>フォロー<%= user.following_user.count %></td>
              <td>フォロワー<%= user.follower_user.count %></td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>