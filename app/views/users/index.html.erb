<div class="container px-5 px-sm-0">
  <div class="row">

      <%= render "users/info", book: @book, user: @user, follower_users: @follower_users, following_users: @following_users %>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
              <th colspan="4"></th>
              <th colspan="5"></th>
              <th colspan="6"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
              <td><%= user.name %></td>
              <td>フォロー<%= user.following_user.count %></td>
              <td>フォロワー<%= user.follower_user.count %></td>
              <td>
               <% if current_user != user %>
               <% if current_user.following?(user) %>
               　　<%= link_to 'フォロー解除', user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-danger" %>
               <% else %>
               　　<%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-sm btn-info" %>
               <% end %>
               <% end %>
              </td>
              <td><%= link_to "Show", user_path(user) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= form_with url: search_user_path(@user), method: :get do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit '検索', class: 'btn btn-primary'  %>
        <% end %>
        <div id="search_result">
          <% if @search_book.present? %>
          
          <%= render 'users/search', search_book: @search_book %>
          
          <% end %>
        </div>
      </div>
    </div>
</div>